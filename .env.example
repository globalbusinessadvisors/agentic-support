# Server Configuration
PORT=3000
NODE_ENV=development

# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=your-github-username
GITHUB_REPO=support-tickets
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Gmail OAuth2 Configuration
GMAIL_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxx
GMAIL_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxx
GMAIL_REDIRECT_URI=http://localhost:3000/auth/callback
SUPPORT_EMAIL=support@yourdomain.com
DOMAIN=yourdomain.com

# Database Configuration
DATABASE_PATH=./data/support.db

# Agent Configuration (Optional)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CONFIDENCE_THRESHOLD=0.8
AUTO_REPLY_ENABLED=true
HUMAN_REVIEW_REQUIRED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log